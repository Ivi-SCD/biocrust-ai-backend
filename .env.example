# =========================================================================
# Configurações da Aplicação
# =========================================================================

# App
APP_NAME="Transpetro Biofouling Monitor API"
VERSION="1.0.0"
DEBUG=false
ENVIRONMENT=development

# =========================================================================
# Banco de Dados
# =========================================================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/biofouling
DATABASE_SYNC_URL=postgresql://postgres:postgres@localhost:5432/biofouling
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# =========================================================================
# Redis
# =========================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=300

# =========================================================================
# Celery
# =========================================================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# =========================================================================
# Autenticação JWT
# =========================================================================
SECRET_KEY=sua-chave-secreta-aqui-mude-em-producao
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =========================================================================
# CORS
# =========================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# =========================================================================
# APIs Externas (opcional)
# =========================================================================
WEATHER_API_KEY=
OCEANOGRAPHIC_API_URL=

# =========================================================================
# Constantes de Negócio
# =========================================================================
DEFAULT_CLEANING_COST_BRL=85000
DEFAULT_FUEL_PRICE_PER_TON=4200
DEFAULT_DOWNTIME_COST_PER_DAY=120000
CRITICAL_INDEX_THRESHOLD=75
WARNING_INDEX_THRESHOLD=55

# =========================================================================
# Logging
# =========================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# =========================================================================
# Relatórios
# =========================================================================
REPORTS_STORAGE_PATH=/tmp/reports
REPORTS_EXPIRY_DAYS=7
